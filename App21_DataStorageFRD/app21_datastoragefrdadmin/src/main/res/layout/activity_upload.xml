<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/upload"
    android:orientation="vertical"
    android:gravity="center_vertical"
    tools:context=".UploadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:padding="20dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etOwnerName"
            android:textSize="20sp"
            android:hint="Owner's name"
            android:textColor="@color/green"
            android:gravity="start|center_vertical"
            android:padding="16dp"
            android:background="@drawable/green_border"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etVehicleBrand"
            android:textSize="20sp"
            android:hint="Vechicle's brand"
            android:textColor="@color/green"
            android:gravity="start|center_vertical"
            android:padding="16dp"
            android:background="@drawable/green_border"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etVehicleNumber"
            android:textSize="20sp"
            android:hint="Vehicle's number"
            android:textColor="@color/green"
            android:gravity="start|center_vertical"
            android:padding="16dp"
            android:background="@drawable/green_border"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etVehicleRTO"
            android:textSize="20sp"
            android:hint="Vehicle's RTO"
            android:textColor="@color/green"
            android:gravity="start|center_vertical"
            android:padding="16dp"
            android:background="@drawable/green_border"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnUploadData"
            android:text="Upload"
            android:textSize="24sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

    </LinearLayout>

</LinearLayout>